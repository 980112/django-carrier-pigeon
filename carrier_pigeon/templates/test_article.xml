{% load pigeon_test_tags %}<?xml version="1.0" encoding="UTF-8"?>
<article>
    <id>{{ object.id }}</id>
    <date></date>
    <title>{{ object.get_title }}</title>
    <content>
        {{ object.content|striptags|linebreaks|safe }}
    </content>
    <media>
    {% for photo in object.get_photos %}
        <medium type="photo">
            <file>article{{ object.id }}/{{ photo.original_file.path|basename }}</file>
        </medium>
    {% endfor %}
    </media>
</article>
